{
  "info": {
    "name": "Nuttoo API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Nuttoo API"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Healthz",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/healthz",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "healthz"
              ]
            }
          }
        },
        {
          "name": "Readyz",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/readyz",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "readyz"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Modules",
      "item": [
        {
          "name": "List Modules",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/v1/modules",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "modules"
              ]
            }
          }
        },
        {
          "name": "Create Module",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"example\",\n  \"version\": \"0.1.0\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/modules",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "modules"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Forks",
      "item": [
        {
          "name": "Create Fork",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sourceModuleId\": \"module-id\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/forks",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "forks"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Ingest",
      "item": [
        {
          "name": "Ingest Repository",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"repository\": \"https://github.com/example/repo\",\n  \"branch\": \"main\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/ingest",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "ingest"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "System",
      "item": [
        {
          "name": "System Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/v1/system/status",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "system",
                "status"
              ]
            }
          }
        }
      ]
    }
  ]
}
