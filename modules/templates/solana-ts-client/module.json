{
  "name": "solana-ts-client",
  "version": "0.1.0",
  "description": "Template for a TypeScript Solana client package (PDA helpers + tx builders).",
  "kind": "template",
  "entryFile": "src/index.ts",
  "runtime": {
    "kind": "node",
    "version": ">=18"
  },
  "inputs": {},
  "outputs": {},
  "files": {
    "include": [
      "src/**",
      "README.md",
      "package.json",
      "tsconfig.json",
      "Cargo.toml",
      "Anchor.toml",
      "tests/**",
      "test/**"
    ],
    "exclude": [
      "node_modules/**",
      "target/**",
      "dist/**",
      ".git/**"
    ]
  }
}
