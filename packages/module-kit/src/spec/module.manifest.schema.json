{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nuttoo Module Manifest",
  "type": "object",
  "required": [
    "name",
    "version",
    "entrypoint",
    "inputs",
    "outputs",
    "permissions"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "entrypoint": {
      "type": "string",
      "minLength": 1
    },
    "inputs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/io"
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/io"
      }
    },
    "permissions": {
      "type": "object",
      "properties": {
        "network": {
          "type": "boolean"
        },
        "filesystem": {
          "type": "string",
          "enum": [
            "none",
            "read-only",
            "read-write"
          ]
        }
      },
      "required": [
        "network",
        "filesystem"
      ]
    },
    "integrity": {
      "type": "object"
    },
    "signature": {
      "type": "object"
    }
  },
  "definitions": {
    "io": {
      "type": "object",
      "required": [
        "name",
        "type"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "default": {},
        "description": {
          "type": "string"
        }
      }
    }
  }
}
