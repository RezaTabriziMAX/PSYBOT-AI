generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RunStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
  CANCELED
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wallet    String?  @unique
  handle    String?  @unique

  forks     Fork[]
  runs      Run[]
}

model Module {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  name        String
  version     String
  description String?
  manifest    Json

  ownerId     String?
  owner       User?    @relation(fields: [ownerId], references: [id])

  forks       Fork[]
  runs        Run[]

  @@unique([name, version])
}

model Fork {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  parentForkId String?
  parentFork   Fork?    @relation("ForkParent", fields: [parentForkId], references: [id])
  children     Fork[]   @relation("ForkParent")

  moduleId    String
  module      Module   @relation(fields: [moduleId], references: [id])

  ownerId     String?
  owner       User?    @relation(fields: [ownerId], references: [id])

  lineageHash String
  notes       String?

  runs        Run[]
}

model Run {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  status      RunStatus @default(QUEUED)
  startedAt   DateTime?
  finishedAt  DateTime?

  moduleId    String
  module      Module    @relation(fields: [moduleId], references: [id])

  forkId      String?
  fork        Fork?     @relation(fields: [forkId], references: [id])

  ownerId     String?
  owner       User?     @relation(fields: [ownerId], references: [id])

  input       Json?
  output      Json?
  error       String?

  traceId     String?
}
